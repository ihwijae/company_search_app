{
  "name": "company-search-app",
  "version": "1.0.0",
  "description": "Company Search Program",
  "author": "Your Name",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "npm run build && electron .",
    "start:dev": "concurrently \"vite\" \"electron .\"",
    "dist:win": "npm run build && electron-builder --win nsis",
    "dist:portable": "npm run build && electron-builder --win portable",
    "clean": "powershell -NoProfile -Command \"Remove-Item -Recurse -Force dist,release -ErrorAction SilentlyContinue\""
  },
  "dependencies": {
    "adm-zip": "^0.5.10",
    "chokidar": "^3.6.0",
    "exceljs": "^4.4.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "electron": "^31.0.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^9.2.1",
    "electron-builder": "^26.0.12",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "vite": "^5.3.1"
  },
  "build": {
    "appId": "com.company.searchapp",
    "productName": "CompanySearch",
    "directories": {
      "output": "release"
    },
    "files": [
      "main.js",
      "preload.js",
      "dist/**",
      "searchLogic.js",
      "src/main/**",
      "src/shared/**",
      "utils/**",
      "config.js",
      "template/**"
    ],
    "asar": true,
    "win": {
      "icon": "build/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    }
  }
}
